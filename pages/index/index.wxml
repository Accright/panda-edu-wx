<!--index.wxml-->
<view class="container">
  <view class="page-body">
    <view class="page-section page-section-spacing swiper">
      <swiper bindchange='changeTab'
        indicator-dots="true">
        <!--tab 1-->
        <swiper-item>
          <view class="weui-grids">
            <block wx:for-items="{{tab1}}" wx:key="{{index}}">
              <navigator bindtap="{{item.click}}" class="weui-grid" wx:if="{{item.click}}" hover-class="weui-grid_active" style='border:2px {{item.color}} dashed'>
                <image class="weui-grid__icon" src="/images/{{item.ico}}" />
                <view class="weui-grid__label" >{{item.name}}</view>
              </navigator>
              <navigator url="{{item.url}}" class="weui-grid" wx:if="{{!item.click}}" hover-class="weui-grid_active" >
                <image class="weui-grid__icon" src="/images/{{item.ico}}" />
                <view class="weui-grid__label" >{{item.name}}</view>
              </navigator>
            </block>
          </view>
        </swiper-item>
         <!--tab 2-->
        <swiper-item>
          <view class="weui-grids">
            <block wx:for-items="{{tab2}}" wx:key="{{index}}">
              <navigator bindtap="{{item.click}}" class="weui-grid" wx:if="{{item.click}}" hover-class="weui-grid_active" style='border:{{item.color}}'>
                <image class="weui-grid__icon" src="/images/{{item.ico}}" />
                <view class="weui-grid__label" style="color:{{item.color}};">{{item.name}}</view>
              </navigator>
              <navigator url="{{item.url}}" class="weui-grid" wx:if="{{!item.click}}" hover-class="weui-grid_active">
                <image class="weui-grid__icon" src="/images/{{item.ico}}" />
                <view class="weui-grid__label" style="color:{{item.color}};">{{item.name}}</view>
              </navigator>
            </block>
          </view>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>
