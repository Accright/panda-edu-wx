<view class="page">
  <view class="page__bd">
  </view>
  <view class="btn-area">
    <form bindsubmit="addFeedback">
      <view class='subtitle'>
        <image src="../../images/phone.png" mode="aspectFit" />
        <view class="demo__icon zan-badge">
          <text>联系方式</text>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" name="contact" placeholder="请输入联系方式" />
          </view>
        </view>
      </view>
      <view class='subtitle'>
        <image src="../../images/feedback.png" mode="aspectFit" />
        <view class="demo__icon zan-badge">
          <text>建议内容</text>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" name="content" placeholder="请输入建议内容" style="height: 3.3em" />
            <view class="weui-textarea-counter">0/200</view>
          </view>
        </view>
      </view>
      <button class="weui-btn" formType="submit" type="primary">立即提交</button>
    </form>
  </view>
</view>