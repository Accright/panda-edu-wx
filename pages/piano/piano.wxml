<view class='container'>
  <view class='piano-view'>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/do.mp3'>
      <image class='btn-img' src='../../images/do.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/re.mp3'>
      <image class='btn-img' src='../../images/re.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/mi.mp3'>
      <image class='btn-img' src='../../images/mi.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/fa.mp3'>
      <image class='btn-img' src='../../images/fa.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/sol.mp3'>
      <image class='btn-img' src='../../images/so.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/la.mp3'>
      <image class='btn-img' src='../../images/la.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/si.mp3'>
      <image class='btn-img' src='../../images/si.png'></image>
    </view>
    <view bindtap="keyDown" class="key" hover-class='keydown' hover-stay-time='100' data-src='/audios/doup.mp3'>
      <image class='btn-img' src='../../images/do.png'></image>
    </view>
  </view>
  <view class='line'>
    <view class="doommview">
      <block wx:for="{{doommData}}" wx:key="id">
          <text wx:if="{{item.display}}" class="aon" style="animation: first {{item.time}}s linear forwards;top:{{item.top}}%;color:{{item.color}};">
              {{item.text}}
          </text>
      </block>
    </view>
  </view>
</view>