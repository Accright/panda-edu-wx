.container{
  /* background-color: #F8F8F8*/
} 
.big-photo-list{
    width:100%;
    display:flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.big-photo-item{
    width:260rpx;
    display: flex;
    flex-direction: column;
    padding:30rpx 30rpx;
    align-items:center;
}

.photo{
    width:260rpx;
    height:260rpx;
    border-radius: 10%;
    background: #aaaaaa;
}

.music-name{
    font-size: 12px;
    line-height: 16px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.music-author{
    font-size: 12px;
    color:#929292;
    line-height: 16px;
}