/* pages/story/story.wxss */
.big-photo-list{
    width:100%;
    display:flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.big-photo-item{
    width:300rpx;
    display: flex;
    flex-direction: column;
    padding:15rpx 15rpx;
    align-items:center;
}

.photo{
    width:300rpx;
    height:300rpx;
    border-radius: 10%;
    background: #aaaaaa;
}

.music-name{
    font-size: 12px;
    line-height: 16px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.music-author{
    font-size: 12px;
    color:#929292;
    line-height: 16px;
}